cd src
cp "$SAGE_ROOT"/config/config.* build-aux/
sdh_configure $LIBBRAIDING_CONFIGURE
# From https://github.com/msys2/MINGW-packages/blob/master/mingw-w64-libbraiding/PKGBUILD#L42C1-L43C1
# instead of applying https://github.com/miguelmarco/libbraiding/pull/5,
# which would require autoreconf'ing
sed -i 's|allow_undefined=yes|allow_undefined=no|g' libtool
sdh_make
sdh_make_install -j1

sdh_generate_windows_lib_files braiding
